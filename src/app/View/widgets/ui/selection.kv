#:include View/widgets/ui/highlighted_border.kv

# Selection with text label
<LabledSelection@ButtonBehavior+BoxLayout>
	orientation: "horizontal"

	text: ''

	on_press: selection_checkbox._do_press()

	group: 'group'

	MDAnchorLayout:
		id: checkbox_anchor

		anchors: "center"

		MDCheckbox:
			id: selection_checkbox
			group: root.group
			size_hint: None, None
			size: dp(48), dp(48)

	MDAnchorLayout:
		id: label_anchor

		anchors: "center"

		MDLabel:
			id: text_label

			text: root.text

			size_hint_x: None
			size_hint_y: None

	MDBoxLayout:
		id: spacer

		size_hint_x: None


<ModeBox@MDBoxLayout+HighlightedBorderWidget>
	orientation: "horizontal"

	border_color: self.parent.theme_cls.divider_color
	border_width: 1

	LabledSelection:
		id: read
		active: True
		text: "read"

	LabledSelection:
		id: write
		text: "write"


<SelectMode@MDAnchorLayout>
	anchors: "center"

	ModeBox:
		size_hint: .95, .95
