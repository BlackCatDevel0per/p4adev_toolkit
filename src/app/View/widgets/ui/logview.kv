#:include View/widgets/ui/highlighted_border.kv


# TODO: Make other base class for params
# Log widget helper class with params
<MDLogViewParams@Widget>
	text: ''

# Log widget itself
<MDLogViewBase@MDScrollView+MDLogViewParams>
	MDLabel:
		id: log_label
		text: root.text

		# TODO: Some other props to root..

		padding: "5dp"
		size_hint_y: None
		height: self.texture_size[1]

		halign: "left"


# Log widget highlighted
<MDLogViewBaseBordered@MDLogViewBase+HighlightedBorderWidgetBase>


<MDLogViewCentralizedParams@Widget>
	anchors: "center"

# TODO: Make this stuff automatically.. (bind params, extra widgets mixing..)
# Log widget itself, inside anchor layout
<MDLogViewCentralized@MDAnchorLayout+MDLogViewCentralizedParams+MDLogViewParams>
	MDLogViewBase:
		size_hint: .95, .95

		# bind params
		text: root.text


# TODO: Try to update attrs by ids or `self.parent`..
# Log widget highlighted, inside anchor layout
<MDLogViewCentralizedBordered@MDAnchorLayout+MDLogViewCentralizedParams+MDLogViewParams+HighlightedBorderWidgetParams>
	MDLogViewBaseBordered:
		size_hint: .95, .95

		# bind params
		text: root.text

		border_color: root.border_color
		border_radius: root.border_radius
		border_width: root.border_width


# TODO: Unite classes using add_widget handle..?
# Alias classes
<MDLogViewNoBorder@MDLogViewCentralized>

<MDLogView@MDLogViewCentralizedBordered>
