<MainNavDrawer@MDNavigationDrawer>

	radius: (0, 8, 8, 0)

	ExtMDNavigationDrawerMenu:

		MDNavigationDrawerHeader:
			id: header

			title: "P4ADev Toolkit"
			title_font_size: "28sp"
			title_color: "#4a4939"
			# text: "Header text"
			spacing: "4dp"
			padding: "12dp", 0, 0, "56dp"

		MDNavigationDrawerLabel:
			id: label_view
			text: "View"

		DrawerClickableItem:
			id: accent_btn

			icon: "brush-variant"
			text: "Accent"

			# TODO: Add other params too.. (material style, divider, icon & etc.)
			on_press: app.switch_accent_style()

		MDNavigationDrawerLabel:
			id: label_app
			text: "App"

		# TODO: Correctly rename in other places..
		DrawerClickableItem:
			id: app_settings_btn
			icon: "cog"
			text: "Settings"

			on_press: app.manager_screens.current = 'settings_screen'

		DrawerClickableItem:
			id: about_btn
			icon: "information-slab-circle"
			text: "About"

			on_press: AboutDialog().open()

		MDNavigationDrawerDivider

		DrawerClickableItem:
			id: about_btn
			icon: "google-ads"
			text: "ADFree"

			# TODO: Button text update (adfree time with fixed limit)
			on_press: app.ads_get_adfree_reward()
			# TODO: Startup timer check & update

